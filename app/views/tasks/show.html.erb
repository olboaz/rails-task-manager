<h1><%= @task.title %></h1>

<%= link_to "Edit this task", edit_task_path %>

<div>
  <h3><%= @task.details %></h3>
</div>

<div>
    <li>
      <% if @task.completed %>
        <%= "☑️" "This taks is completed" %>
      <% else %>
        <%= "❌" "This taks is not completed yet "%>
      <% end %>
    </li>
</div>

<%= link_to "Back to list", tasks_path %>
